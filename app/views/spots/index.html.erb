<h1>Recently Added Places</h1>

<br />

<% @spots.each do |spot| %>
  <div class="span3">
    <img src="<%= spot.image %>" class="span3"/>
	<h3 class="span3"><%= spot.title %></h3>
    <p class="span3"><%= spot.user %> to <%= spot.location %>,
    <%= link_to 'View', spot %></p>
  </div>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Location</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spots.each do |spot| %>
  <tr>
    <td><%= spot.title %></td>
    <td><%= spot.description %></td>
    <td><%= spot.image %></td>
    <td><%= spot.location %></td>
    <td><%= spot.user %></td>
    <td><%= link_to 'Show', spot %></td>
    <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
    <td><%= link_to 'Destroy', spot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Spot', new_spot_path %>
