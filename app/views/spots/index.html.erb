<h2>Recent Spots:</h2>

<% @spots.each do |spot| %>
  <div class="span3">
    <img src="<%= spot.image %>" class="span3"/>
	<div id="currentspotlocation" class="modal hide fade in span3" style="display: none; ">  
	<div class="modal-header">  
	<a class="close" data-dismiss="modal">Ã—</a>  
	<%= spot.location %>
	</div>  
	<div class="modal-body ">  
	<h4><%= spot.location %></h4> 
	<p><img border="0" src="//maps.googleapis.com/maps/api/staticmap?center=Mountain+Home+Inn,Mill+Valley,CA&zoom=14&size=512x512&maptype=roadmap&markers=color:blue%7Clabel:S%7C37.909449,-122.581201&sensor=false" alt="Mount Tamalpais" /></p>              
	</div>  
	<div class="modal-footer">  
	<a href="#" class="btn btn-success">Like</a>  
	<a href="#" class="btn btn-success">Re-Map</a>
	<a href="#" class="btn btn-success">Comment</a>  
	<a href="#" class="btn" data-dismiss="modal">Close</a>  
	</div>  
	</div> 
	<p class="span3"><%= spot.title %> added by <%= spot.user %> to mapnamehere.</p>
	<p class="span3"><a data-toggle="modal" href="#currentspotlocation"><%= spot.location %></a></p>
  </div>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Location</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spots.each do |spot| %>
  <tr>
    <td><%= spot.title %></td>
    <td><%= spot.description %></td>
    <td><%= spot.image %></td>
    <td><%= spot.location %></td>
    <td><%= spot.user %></td>
    <td><%= link_to 'Show', spot %></td>
    <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
    <td><%= link_to 'Destroy', spot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Spot', new_spot_path %>

<p>All spot titles in lowercase:</p>
<br />
<% @spots.each do |spot| %>
	<%= spot.title.downcase %>, 
<% end %>
